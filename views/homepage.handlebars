
<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Popular Venues</h2>
      <p class="mt-2 text-lg leading-8 text-gray-600">See below for popular venues recomended by the Ticketmaster API.</p>
    </div>
    {{#each result as |data|}}
    <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-300 pt-10 sm:mt-16 sm:pt-16 lg:mx-1 lg:max-w-none lg:grid-cols-1">
        
      <article class="flex max-w-xl flex-col items-start justify-between">
        <div class="flex items-center gap-x-4 text-xs">
          <time datetime="2020-03-16" class="text-gray-500">Upcoming Events: {{data.upcomingEvents._total}}</time>
          <a href="https://twitter.com/{{data.social.twitter.handle}}" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{{data.social.twitter.handle}}</a>
        </div>
        <div class="group relative">
          <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
            <a href="/venue/{{data.id}}">
              <span class="absolute inset-0"></span>
              {{{data.name}}}
            </a>
          </h3>
          {{#if data.generalInfo.generalRule}}
          <p style="max-width: 1000px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" class="mt-5 line-clamp-3 text-sm leading-6 overflow-hidden text-gray-600">{{data.generalInfo.generalRule}}</p>
          {{else}}
          <p style="max-width: 1000px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" class="mt-5 line-clamp-3 text-sm leading-6 overflow-hidden text-gray-600">No general info to display!</p>
          {{/if}}
        </div>
        <div class="relative mt-8 flex items-center gap-x-4">
          <!--<img src="https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-10 w-10 rounded-full bg-gray-50">-->
          <div class="text-sm leading-6">
            <p class="font-semibold text-gray-900">
              <a href="/venue/{{data.id}}">
                <span class="absolute inset-0"></span>
                Address:
              </a>
            </p>
            <p class="text-gray-600">{{data.address.line1}}, {{data.state.name}}, {{data.postalCode}}</p>
          </div>
        </div>
      </article>

      <!-- More posts... -->
      {{#each result as |data|}}
      <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        
      <article class="flex max-w-xl flex-col items-start justify-between">
        <div class="flex items-center gap-x-4 text-xs">
          <time datetime="2020-03-16" class="text-gray-500">Upcoming Events: {{data.upcomingEvents._total}}</time>
          <a href="https://twitter.com/{{data.social.twitter.handle}}" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">{{data.social.twitter.handle}}</a>
        </div>
        <div class="group relative">
          <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
            <a href="/venue/{{data.id}}">
              <span class="absolute inset-0"></span>
              {{{data.name}}}
            </a>
          </h3>
          {{#if data.generalInfo.generalRule}}
          <p style="max-width: 1000px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" class="mt-5 line-clamp-3 text-sm leading-6 overflow-hidden text-gray-600">{{data.generalInfo.generalRule}}</p>
          {{else}}
          <p style="max-width: 1000px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" class="mt-5 line-clamp-3 text-sm leading-6 overflow-hidden text-gray-600">No general info to display!</p>
          {{/if}}
        </div>
        <div class="relative mt-8 flex items-center gap-x-4">
          <!--<img src="https://images.unsplash.com/photo-1519244703995-f4e0f30006d5?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="" class="h-10 w-10 rounded-full bg-gray-50">-->
          <div class="text-sm leading-6">
            <p class="font-semibold text-gray-900">
              <a href="/venue/{{data.id}}">
                <span class="absolute inset-0"></span>
                Address:
              </a>
            </p>
            <p class="text-gray-600">{{data.address.line1}}, {{data.state.name}}, {{data.postalCode}}</p>
          </div>
        </div>
      </article>

      
    </div>
    {{/each}}
  </div>
  {{/each}}
</div>
    </div>
  </div>
</div>

